<%- include('../partials/header') %>

<section id="show-page">
  <div><pre><%= poem.poem %></pre></div>
  <button type="button">Edit</button>
  <button type="button">Delete</button>
</section>


<br><br>
<h2>Comments</h2>
<% if (user) { %>
  <form id="add-comment-form" method="POST" action="/poems/<%= poem._id %>/comments">
    <label>Comment:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Comment">
  </form>
<% } %>

<% if (poem.comments.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Comment</th>
        <!-- Add this placeholder heading -->
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% poem.comments.forEach(function(r) { %>
        <tr>
          <td class="comment-user"><img src="<%= r.userAvatar %>"><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <!-- Add this td -->
          <td>
            <% if (user && user._id.equals(r.user)) { %>
              <form action="/comments/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / poem.comments.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Comments Yet</h5>
<% } %>


<%- include('../partials/footer') %>